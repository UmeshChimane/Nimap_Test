<%- include('../nav') %>

<div class="container mt-4">
  <h2 class="mb-3">Category List</h2>
  <table class="table table-bordered">
    <thead class="table-dark">
      <tr>
        <th>ID</th>
        <th>Name</th>
        <th>Actions</th>
      </tr>
    </thead>
    <tbody>
      <% categories.forEach(cat => { %>
        <tr>
          <td><%= cat.id %></td>
          <td><%= cat.name %></td>
          <td>
            <a href="/editcategory/<%= cat.id %>" class="btn btn-sm btn-warning">Edit</a>
            <a href="/deletecategory/<%= cat.id %>" class="btn btn-sm btn-danger" onclick="return confirm('Are you sure you want to delete this category?');">Delete</a>
          </td>
        </tr>
      <% }) %>
    </tbody>
  </table>
</div>
